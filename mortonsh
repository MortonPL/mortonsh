# Morton's Bash Pack
# Latest Version: 0.1.2
# Last Edit: 19/05/21

### Self-commands
mortonsh() {
  case "${1}" in
  --help)
    echo "Can't help you yet... Sorry!"
	;;
  -h)
    echo "Can't help you yet... Sorry!"
	;;
  --version)
    echo "Morton's Bash Pack, version 0.1.2"
	;;
  -v)
    echo "Morton's Bash Pack, version 0.1.2"
	;;
  --edit)
    vim ~/mortonsh
    ;;
  -e)
    vim ~/mortonsh
    ;;
  --update)
    wget https://raw.github.com/MortonPL/mortonsh/stable/mortonsh -O ~/mortonsh
	;;
  -u)
    wget https://raw.github.com/MortonPL/mortonsh/stable/mortonsh -O ~/mortonsh
	;;
  *)
    echo "mortonsh: usage: [OPTION]..."
	echo "Try 'mortonsh --help' for more information."
    ;;
  esac
}
msh() {
  mortonsh $@
}
### Common commands
alias zz="cd .."
alias ll="ls -al"
alias xx="clear"
alias home="cd ~"
alias wipe="cd ~ && clear"

### Files
rn() {
  mv "${1}" "${2}"
}
vish() {
  vim "${1}" && chmod +x "${1}"
}
cphere() {
  cp "${1}" $(basename "${1}")
}
cpthere() {
  cp "$(basename "${1}") ${1}"
}
mvhere() {
  mv "${1}" $(basename "${1}")
}
mvthere() {
  mv "$(basename "${1}") ${1}"
}
swap() {
  mv "${1}" $(dirname "${2}")/$(basename "${1}")
  mv "${2}" $(dirname "${1}")/$(basename "${2}")
}

### WEiTI-exclusive
galeraget() {
  scp "${1}"@galera.ii.pw.edu.pl:~/"${2}" $(basename "${2}")
}
galeraput() {
  scp "${1}" "${2}"@galera.ii.pw.edu.pl:~/$(basename "${2}")
}
galera() {
  ssh "${1}"@galera.ii.pw.edu.pl
}

### Other
xserver() {
  DISPLAY=$(cat /etc/resolv.conf | grep nameserver | awk '{print $2}'):0 &
}

